{
  "name": "anaplian",
  "homepage": "https://github.com/anaplian-io/anaplian",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "format": "npm run lint:fix && prettier --write .",
    "build": "npm run lint && npm run prettier && lerna run build",
    "build:ci": "npm ci && npm run build && npm run test:ci",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "clean": "lerna run clean && rm -rf node_modules",
    "semantic-release": "lerna run semantic-release",
    "prepare": "husky"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Anaplian.io",
  "license": "MIT",
  "description": "Long-running AI agent framework",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "semantic-release-monorepo": "^8.0.2",
    "typescript-eslint": "^8.18.2"
  }
}
